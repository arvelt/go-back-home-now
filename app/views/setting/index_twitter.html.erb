<%= render 'parts/head_in_body' %>
<%= form_tag({ :controller => 'setting',:action => 'set_status'}) do %>
<div class="menu">
  <%= submit_tag '保存', :disable_with => '処理中...' %>
</div>
<table id="setting_twitter_table" align=center>
<th colspn=2>twitter</th>'
<tr>
  <td>はじまる時間を登録したらtwitterに投稿する</td>
  <td>
    <% if @user.twitter_poststart == true then %>
      <%= check_box_tag :start_check , 1 ,true %>
    <% else %>
      <%= check_box_tag :start_check , 1 ,false %>
    <% end %>
  </td>
</tr>   
<tr>
  <td>おわりの時間を登録したらtwitterに登録する</td>
  <td>
    <% if @user.twitter_postend == true then %>
      <%= check_box_tag :end_check , 1 , true %>
    <% else %>
      <%= check_box_tag :end_check , 1 , false %>
    <% end %>
  </td>
</tr>
</table>
<% end %>

